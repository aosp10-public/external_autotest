AUTHOR = 'ARC++ Team'
NAME = 'cheets_GTS.tradefed-run-collect-tests-only'
ATTRIBUTES = 'suite:gts'
DEPENDENCIES = 'arc'
JOB_RETRIES = 2
TEST_TYPE = 'server'
TIME = 'LENGTHY'
PRIORITY = 70
DOC = 'Run all of the Android Google Test Suite (GTS) in the ARC++ container.'

def run_GTS(machine):
    host_list = [hosts.create_host(machine)]
    job.run_test(
        'cheets_GTS',
        hosts=host_list,
        iterations=1,
        max_retry=0,
        tag='tradefed-run-collect-tests-only',
        test_name='cheets_GTS.tradefed-run-collect-tests-only',
        run_template=['run', 'commandAndExit', 'collect-tests-only',
                # TODO(kinaba): workaround until ag/3850281 is made public.
                '--preparer-whitelist',
                'com.android.tradefed.targetprep.suite.SuiteApkInstaller'],
        retry_template=None,
        target_module=None,
        target_plan=None,
        timeout=600)

parallel_simple(run_GTS, machines)
